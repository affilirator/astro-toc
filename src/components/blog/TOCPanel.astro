---
import HeadingLink from './HeadingLink.astro';
import { type Heading } from '../../types/blog';

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;
---

<div
  id="tocPanel"
  class="fixed inset-y-0 right-0 w-80 bg-gradient-to-br from-purple-900/95 to-indigo-900/95 backdrop-blur-lg transform translate-x-full transition-all duration-300 ease-out shadow-2xl overflow-y-auto"
>
  <div class="p-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-semibold text-transparent bg-clip-text bg-gradient-to-r from-purple-200 to-indigo-200">
        Contents
      </h3>
      <button
        id="closeButton"
        class="p-2 text-gray-400 hover:text-white hover:bg-white/10 rounded-lg transition-colors"
        aria-label="Close menu"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    
    <nav class="relative">
      <div class="absolute left-1.5 top-0 bottom-0 w-px bg-gradient-to-b from-purple-500/50 to-transparent"></div>
      <ul class="space-y-2">
        {headings.map(heading => (
          <HeadingLink {...heading} />
        ))}
      </ul>
    </nav>
  </div>
</div>