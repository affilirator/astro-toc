---
import Layout from '../layouts/Layout.astro';
import PostGrid from '../components/blog/PostGrid.astro';
---

<Layout title="Car Repair Blog">
  <main class="max-w-7xl mx-auto px-4 py-12">
    <div class="text-center mb-16">
      <h1 class="text-5xl font-bold mb-4 bg-gradient-to-r from-purple-600 to-indigo-600 text-transparent bg-clip-text">
        Car Repair Blog
      </h1>
      <p class="text-gray-600 text-lg max-w-2xl mx-auto">
        Your comprehensive guide to car maintenance, repairs, and automotive knowledge
      </p>
    </div>
    
    <PostGrid />
  </main>
</Layout>